<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:cardCornerRadius="@dimen/h8"
    android:layout_margin="@dimen/h8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_api_key"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:background="@drawable/edit_view_default"
            android:hint="@string/lbl_insert_api_key"
            android:inputType="text"
            android:padding="@dimen/h8"
            android:textSize="@dimen/font_h8"
            tools:ignore="Autofill,TextContrastCheck" />

        <Spinner
            android:id="@+id/sp_languages"
            android:entries="@array/languages"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="?android:attr/actionBarSize"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>